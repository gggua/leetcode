# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, x):
#         self.val = x
#         self.next = None

class Solution:
    def deleteDuplicates(self, head: ListNode) -> ListNode:
        if not head or not head.next:
            return head
        slow, fast = head, head.next
        while fast:
            while fast and slow.val == fast.val:
                fast = fast.next
            if fast:
                slow.next = fast
                slow = fast
                fast = fast.next
        slow.next = fast
        return head
