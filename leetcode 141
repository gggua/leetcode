# Definition for singly-linked list.
# class ListNode(object):
#     def __init__(self, x):
#         self.val = x
#         self.next = None

class Solution(object):
    def hasCycle(self, head):
        """
        :type head: ListNode
        :rtype: bool
        """
        slow, fast = head, head
        while fast:
            if slow == fast.next:
                return True
            slow = slow.next
            if not fast.next:
                return False
            fast = fast.next.next
        return False
